<%- include('partials/header') %>

<div class="jumbotron text-center">
  <div class="container">
    <i class="fas fa-users fa-6x"></i>
    <h1 class="display-3">Public Secrets!!!</h1>
    <!-- <p class="secret-text">I AM NOOB</p> -->
    <% users.forEach(user => { %>
    <% user.secrets.forEach(element => {  %>
    <p class="secret-text"><%= element.text %></p>
    <% }); %>
    <% }); %>
    <hr />

    <a class="btn btn-danger btn-lg btn-custom" href="/logout" role="button">Log Out</a>
    <a class="btn btn-light btn-lg btn-custom" href="/secrets" role="button"
      >My Secrets</a
    >
    <a class="btn btn-dark btn-lg" href="/submit" role="button"
      >Submit a Secret</a
    >
  </div>
</div>

<%- include('partials/footer') %>
